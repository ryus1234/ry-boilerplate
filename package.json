{
  "name": "ry-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": "7.8.0"
  },
  "scripts": {
    "start": "yarn run clean; yarn run serve & yarn run watch",
    "lint": "eslint src",
    "lint:css": "stylelint src/**/*.css",
    "typecheck": "flow",
    "build:js": "NODE_ENV=production webpack",
    "build:css": "postcss src/css/main.css -o public/css/main.css -m",
    "build:static": "cpx 'src/**/*.{png,jpg}' public",
    "build:html": "NODE_ENV=production ./html-compile.js",
    "build": "yarn run clean; yarn run build:html && yarn run build:static && yarn run build:js && yarn run build:css",
    "watch:js": "webpack -w",
    "watch:css": "postcss src/css/main.css -o public/css/main.css -m -w",
    "watch:static": "cpx 'src/**/*.{png,jpg}' public --watch",
    "watch:html": "./html-compile.js",
    "watch": "yarn run watch:js & yarn run watch:css & yarn run watch:static & yarn run watch:html",
    "serve": "http-server -a `ifconfig en1 | grep 192 | awk '{print $2}'` -o -p 9000 public -c-1",
    "serve:production": "http-server -a `ifconfig en1 | grep 192 | awk '{print $2}'` -o -p 9000 public -c-1",
    "clean": "rm -rf public && mkdir -p public/css public/js public/img",
    "deploy": "yarn run build; ./deploy.js",
    "deploy:css": "yarn run build:css; cpx 'public/css/main.css' deploy/css",
    "deploy:js": "yarn run build:js; cpx 'public/js/*.js' deploy/js",
    "test:ci": "yarn typecheck & yarn lint & yarn lint:css"
  },
  "devDependencies": {
    "autoprefixer": "^6.6.1",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-env": "^1.3.3",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.16.0",
    "chokidar": "^1.6.1",
    "cpx": "^1.5.0",
    "cssnano": "^3.10.0",
    "ejs": "^2.5.5",
    "eslint": "^3.13.1",
    "eslint-plugin-flowtype": "^2.30.4",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^6.10.3",
    "flow-bin": "^0.43.1",
    "flowtype": "^2.0.0",
    "fs-extra": "^2.0.0",
    "http-server": "^0.9.0",
    "npm-check-updates": "^2.10.5",
    "postcss": "^5.2.9",
    "postcss-advanced-variables": "^1.2.2",
    "postcss-apply": "^0.6.1",
    "postcss-calc": "^5.3.1",
    "postcss-cli": "^3.1.1",
    "postcss-color-function": "^3.0.0",
    "postcss-comment": "^1.0.3",
    "postcss-extend": "^1.0.5",
    "postcss-import": "^9.1.0",
    "postcss-mixins": "^5.4.1",
    "postcss-nested": "^1.0.0",
    "postcss-simple-vars": "^3.0.0",
    "postcss-sorting": "^2.0.1",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "webpack": "^2.3.3"
  },
  "dependencies": {
    "jquery": "^3.1.1",
    "js-cookie": "^2.1.3",
    "normalize.css": "^6.0.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  }
}
